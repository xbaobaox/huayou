  width: 125rpx;
  height: 125rpx;
}

.user-name {
  margin-top: 5rpx;
  font-size: 36rpx;
  font-weight: bold;
  /* color: rgb(255, 255, 255); */
}

.user-member {
  margin-top: 5rpx;
  font-size: 22rpx;
  padding: 5rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgb(207, 207, 207);
  text-align: center;
  /* color: #fff; */
}

