/* miniprogram/pages/index/index.wxss */
@import "../../weui/weui-wxss/dist/style/weui.wxss";

page {
  background-color: #f6f6f6;
}

view, image, text {
  margin: 0;
  padding: 0;
}

.index {
  height: 100vh;
}

.index-bar {
  display: flex;
  justify-content: space-around;
  position: fixed;
  background-color: #fff;
  width: 100%;
}

.indexbar-item {
  padding: 10rpx 0;
  width: 125rpx;
  color: #666;
  text-align: center;
}

.img-box {
  display: flex;
  flex-wrap: wrap;
  padding-top: 38rpx;
}

.img-item {
  width: 375rpx;
  height: 375rpx;
}

.selected {
  display: block;
  /* background: #222831; *//* color: #00adb5; */
  color: #fb7299;
  border-bottom: 6rpx solid #fb7299;
  /* padding: 0 10rpx; */
}

.loading {
  margin: 30rpx 0;
  
}
