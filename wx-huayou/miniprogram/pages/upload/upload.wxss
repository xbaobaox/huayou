/* miniprogram/pages/upload/upload.wxss */
@import "../../weui/weui-wxss/dist/style/weui.wxss";

page {
  background-color: rgb(233, 233, 233);
  height: 100vh;
}

.upload {
  margin: 10rpx 0;
}

.name-label, .author-lable, .type-label {
  /* padding: 30rpx 30rpx; */
  font-size: 28rpx;
  color: #666;
  margin: 25rpx 0 5rpx 30rpx;
}

#name, #author {
  display: block;
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.type {
  display: flex;
  background-color: #fff;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx 0;
  margin-bottom: 30rpx;
}

.type-list {
  font-size: 26rpx;
  width: 250rpx;
  text-align: center;
  margin: 30rpx 0;
}

.submit {
  margin: 30rpx 0;
}

.preview {
  width: 50%;
  vertical-align: top;
  margin: 10rpx 10rpx;
}

.preview-title {
  margin: 10rpx 10rpx;
}

.upload-state {
  background-color: rgba(109, 109, 109, 0.685);
  clip-path: inset(5rpx);
  position: fixed;
  width: 400rpx;
  height: 400rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto auto;
  transition-duration: 2s;
}

.state {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  transform: scale(5);
}

.right {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto auto;
  width: 200rpx;
  height: 200rpx;
}
